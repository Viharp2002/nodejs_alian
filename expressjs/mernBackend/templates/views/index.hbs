                                    <td><input type="text" id="12" name="pr1" size="15" maxlength="10"/></td>
                                    <td><input type="number" id="y1" name="ye1" size="15" min="2005" max="2022" minlength="4" maxlength="4"/></td>
                                </tr>
                                <tr>
                                    <td>2.</td>
                                    <th>Class XII</th>
                                    <td> <input type="text" name="state2" size="20" id="22" maxlength="20" /></td>
                                    <td><input type="text" id="13" name="pr2" size="15" maxlength="10" /></td>
                                    <td><input type="number" id="y2" name="ye2" size="15" min="2005" max="2022" minlength="4" maxlength="4"/></td>
                                </tr>
                                <tr>
                                    <td>3.</td>
                                    <th>Graduation</th>
                                    <td> <input type="text" id="33" name="state3" size="20" maxlength="20"  /></td>
                                    <td><input type="text" id="14" name="pr3" size="15" maxlength="10"  /></td>
                                    <td><input type="number" id="y3" name="ye3" size="15" min="2005" max="2022" minlength="4" maxlength="4"/></td>
                                </tr>
                                <tr>
                                    <td>4.</td>
                                    <th>Masters</th>
                                    <td> <input type="text" id="44" name="state4" size="20" maxlength="20"  /></td>
                                    <td><input type="text" id="15" name="pr4" size="15" maxlength="10"  /></td>
                                    <td><input type="number" id="y4" name="ye4" size="15" min="2005" max="2022" minlength="4" maxlength="4"/></td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td><p class="disp7i">*clas x required</p>
                                        <p></p><br>
                                        <p class="disp7j">*clas xii required</p>
                                        <p></p><br>
                                        <p class="disp7o">*Graduation required</p>
                                        <p></p><br>
                                        <p class="disp7r">*Masters required</p>
                                    </td>
                                    <td><p class="disp8i">*2 decimal:classx</p>
                                        <br><p></p>
                                        <p class="disp8j">*2 decimal:classxii</p>
                                        <br><p></p>
                                        <p class="disp8o">*2 deci:gradtuate</p>
                                        <br><p></p>
                                        <p class="disp8r">*2 decimal:masters</p>
                                    </td>
                                        <td><p class="disp20">*year is required</p></td>

                                    
                                    <td></td>
                                    
                                </tr>
                            </table>

                        </td>
                    </tr>
                    <tr>
                        <td>COURSES:</td>
