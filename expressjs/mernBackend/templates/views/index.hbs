                            <input id="B.Sc" type="radio" name="COURSES" value="B.Sc" />
                            <label for="B.Sc">B.Sc</label>
                            <input id="B.A" type="radio" name="COURSES" value="B.A" />
                            <label for="B.A">B.A</label>
